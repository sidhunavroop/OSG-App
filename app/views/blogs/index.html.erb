<p id="notice"><%= notice %></p>
<div class="container">
  <span class="float-right">
    <%= link_to 'New', new_blog_path, class: "btn btn-success" %>
  </span>
  <h2 class="mb-5">Blog Posts</h2>
  <% @blogs.each do |blog| %>
    <div>
      <h4><%= blog.title %></h4>
      <p>
        <%= raw blog.preview_text %>
      </p>
      <%= link_to 'Read More', blog, class: "btn btn-link" %>
    </div>
    <hr>
  <% end %>
</div>
